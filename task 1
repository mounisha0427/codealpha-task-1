import random

# Predefined list of words
word_list = ['apple', 'banana', 'grape', 'mango', 'peach']
selected_word = random.choice(word_list)
guessed_word = ['_'] * len(selected_word)
attempts = 6
guessed_letters = []

print("ğŸ® Welcome to Hangman!")
print("Guess the word, one letter at a time.")
print("You have", attempts, "attempts.\n")

while attempts > 0 and '_' in guessed_word:
    print("Word: ", ' '.join(guessed_word))
    guess = input("Enter a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("â— Please enter a single alphabet letter.")
        continue

    if guess in guessed_letters:
        print("âš ï¸ You've already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in selected_word:
        print("âœ… Good guess!")
        for index, letter in enumerate(selected_word):
            if letter == guess:
                guessed_word[index] = guess
    else:
        attempts -= 1
        print("âŒ Wrong guess! Attempts left:", attempts)

print("\nWord was:", selected_word)

if '_' not in guessed_word:
    print("ğŸ‰ Congratulations! You guessed the word!")
else:
    print("ğŸ’€ Game over! Better luck next time.")
